<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme (night). -->
    <style name="Theme.Decybel2" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/green_dark_grass</item>
        <item name="colorOnPrimary">@color/green_yellowish</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/green_light</item>
        <item name="colorOnSecondary">@color/green_dark</item>

        <item name="colorOnBackground">@color/green_light_faded</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimary</item>
        <item name="android:textColor">?attr/colorOnPrimary</item>
        <item name="android:colorBackground">?attr/colorOnBackground</item>
    </style>
</resources>